@model SportsStore.Domain.Entities.ShippingDetails

@{ 
    ViewBag.Title = "SportsStore : CheckOut";
}

<h2>CheckOut Agora!</h2>
<p>
    Por favor,digite seus dados para enviarmos seus produtos
</p>

@using (Html.BeginForm()){
    @Html.ValidationSummary()

    <h3>Enviar para:</h3>
    <div class="form-group">
        <label>Nome:</label>
        @Html.TextBoxFor(x=>x.Name,new { @class = "form-control" })
    </div>

    <h3>Endereço</h3>

    foreach (var property in ViewData.ModelMetadata.Properties){
        if (property.PropertyName != "Name" && property.PropertyName != "GiftWrap"){
            <div class="form-group">
                <label>@(property.DisplayName ?? property.PropertyName)</label>
                @Html.TextBox(property.PropertyName, null,new { @class="form-control"})            
            </div>
        }

    }

    <h3>Opções</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x=>x.GiftWrap)
            Embrulhar para presente estes itens
        </label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Completar Pedido" />
    </div>
}